{
  "parser": "babel-eslint",
  "env": {"browser": true, "jasmine": true, "mocha": true},
  "globals": {
      "affix": true,
      "dump": true,
      "_": true
  },
  "plugins": ["xss", "deprecate"],
  "extends": "@evo/eslint-config-uaprom",
  "rules": {
    "no-underscore-dangle": ["error", { "allow" : ["__Rewire__", "__ResetDependency__", "__webpack_public_path__"]}],
    "no-unused-expressions": "off",
    "no-unused-vars":["error", {"varsIgnorePattern": "^_" } ],
    "xss/no-location-href-assign": [2, { "escapeFunc": "sanitizeLocation" }],

    "deprecate/function": ["error",
      {"name": "ungettext", "use": "ngettext from c-3po (https://c-3po.js.org/ngettext.html)"},
      {"name": "get_config", "use": "getConfig from 'libconfig'"}
    ],
    "deprecate/import": ["error",
      {"name": "Metrics", "use": "Tracking"},
      {"name": "gettext", "use": "c-3po"}
    ],
    "deprecate/member-expression": ["error",
      {"name": "React.createClass", "use": "native es6 classes instead or createClass function from 'create-react-class' package. https://facebook.github.io/react/blog/2017/04/07/react-v15.5.0.html"},
      {"name": "React.PropTypes", "use": "'prop-types' package. https://facebook.github.io/react/blog/2017/04/07/react-v15.5.0.html"}
    ],

    "class-methods-use-this": 0,
    "no-mixed-operators": 0,
    "no-plusplus": 0,
    "no-bitwise": 0,
    "no-void": 0,
    "no-continue": 0,
    "new-parens": 0,
    "space-unary-ops": 0,
    "object-property-newline": 0,
    "no-useless-escape": 0,
    "no-extra-boolean-cast": 0,
    "no-multi-assign": 0,
    "operator-assignment": 0,
    "no-prototype-builtins": 0,
    "import/first": 0,
    "import/newline-after-import": 0,
    "import/no-named-as-default": 0,
    "react/require-default-props": 0,
    "react/forbid-prop-types": 0,
    "react/self-closing-comp": 0,
    "react/no-unused-prop-types": 0,
    "react/jsx-filename-extension": 0,
    "react/jsx-no-target-blank": 0,
    "react/no-array-index-key": 0,
    "react/no-danger": 0,
    "react/no-find-dom-node": 0,
    "react/prop-types": 0,
    "react/no-unescaped-entities": 0,
    "react/no-danger-with-children": 0,
    "react/no-render-return-value": 0,
    "react/no-string-refs": 0,
    "jsx-a11y/no-static-element-interactions": 0,
    "jsx-a11y/label-has-for": 0,
    "jsx-a11y/img-has-alt": 0,
    "jsx-a11y/href-no-hash": 0,
    "jsx-a11y/anchor-has-content": 0
  }
}
